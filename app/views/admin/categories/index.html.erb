<section class="products-index">

  <header class="page-header">
    <h1>Categories</h1>
  </header>
  <div>
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>
  <br>
  <div class="categories">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Categories</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>

</section>
